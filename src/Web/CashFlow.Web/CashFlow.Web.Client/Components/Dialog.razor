<MudDialog Style="min-width: 500px; min-height: 150px;" >
    <TitleContent>
        @Title
    </TitleContent>
    <DialogContent>
        @Content
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@RefusingText</MudButton>
        <MudButton Color="@Color" OnClick="Submit">@AcceptText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; } = new();

    private void Submit() => MudDialog.Close(DialogResult.Ok(true));

    private void Cancel() => MudDialog.Cancel();

    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string Content { get; set; } = string.Empty;

    [Parameter]
    public string RefusingText { get; set; } = string.Empty;    

    [Parameter]
    public string AcceptText { get; set; } = string.Empty;    

    [Parameter]
    public Color Color { get; set; }
}