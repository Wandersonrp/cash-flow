@page "/relatorios"

@layout MainLayout    

@inject IDialogService DialogService

<PageTitle>Relatórios</PageTitle>


<div class="px-8 d-flex align-center justify-space-between" style="width: 80%;">
    <div>
        <MudText Typo="Typo.h3" Class="ma-0 pa-0" GutterBottom="true">Relatórios</MudText>    
    </div>

    <div class="d-flex align-center justify-end gap-2 cursor-pointer" style="width: 30%; height: 50px;" @onclick="OpenReportDialog">
        <MudIcon Icon="@Icons.Material.Filled.Description" Size="Size.Large"/>
        <MudText Typo="Typo.h6">Relatórios</MudText>
    </div>  
</div>

@code {

    private DialogOptions _options = new DialogOptions
    {
        CloseOnEscapeKey = true,        
    };

    private async Task OpenReportDialog()
    {
        var dialog = await DialogService.ShowAsync<ReportDialog>("Report", _options);
    }
}